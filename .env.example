# Environment Configuration for Vocali Express

# Server Configuration
NODE_ENV=development
PORT=3575

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/vocali-express

# AWS Configuration (if keeping S3 for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=vocali-transcriptions

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=audio/mpeg,audio/wav,audio/mp3,audio/m4a

# Logging
LOG_LEVEL=info

# Legacy AWS Configuration (for gradual migration)
SPEECHMATICS_API_KEY=default_speechmatics_api_key_here
COGNITO_REGION=default_region_here
COGNITO_USER_POOL_ID=default_user_pool_id_here
COGNITO_CLIENT_ID=default_client_id_here